<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Preview ImageView -->
    <ImageView
        android:id="@+id/previewImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:contentDescription="RGB Camera Preview" />

    <!-- Status overlay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#80000000">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_preview_available"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/resolutionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resolution: N/A"
            android:textColor="#CCFFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/framerateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frame Rate: N/A"
            android:textColor="#CCFFFFFF"
            android:textSize="12sp" />
        
        <!-- RAW DNG Controls for Samsung devices -->
        <LinearLayout
            android:id="@+id/rawDngControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <Switch
                android:id="@+id/rawDngToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAW DNG"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/rawDngStatusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Samsung Level 3"
                android:textSize="10sp"
                android:textColor="#4CAF50" />
        </LinearLayout>

        <!-- Device Model Info -->
        <TextView
            android:id="@+id/deviceModelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device: Unknown"
            android:textSize="10sp"
            android:textColor="#999999"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</RelativeLayout>