<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Status bar showing connection/recording status -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/status_background"
        android:padding="12dp"
        android:text="@string/status_initializing"
        android:textColor="@color/status_text"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Real-time sensor status indicators -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/sensor_status_background">

        <!-- RGB Camera Status -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <View
                android:id="@+id/rgbStatusIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/status_indicator_red"
                android:layout_marginEnd="6dp" />
            
            <TextView
                android:id="@+id/rgbStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RGB"
                android:textSize="10sp"
                android:textColor="@color/sensor_status_text" />
        </LinearLayout>

        <!-- Thermal Camera Status -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <View
                android:id="@+id/thermalStatusIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/status_indicator_red"
                android:layout_marginEnd="6dp" />
            
            <TextView
                android:id="@+id/thermalStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thermal"
                android:textSize="10sp"
                android:textColor="@color/sensor_status_text" />
        </LinearLayout>

        <!-- GSR Sensor Status -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <View
                android:id="@+id/gsrStatusIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/status_indicator_red"
                android:layout_marginEnd="6dp" />
            
            <TextView
                android:id="@+id/gsrStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GSR"
                android:textSize="10sp"
                android:textColor="@color/sensor_status_text" />
        </LinearLayout>

        <!-- PC Link Status -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <View
                android:id="@+id/pcStatusIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/status_indicator_red"
                android:layout_marginEnd="6dp" />
            
            <TextView
                android:id="@+id/pcStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC Link"
                android:textSize="10sp"
                android:textColor="@color/sensor_status_text" />
        </LinearLayout>

    </LinearLayout>

    <!-- Recording elapsed time (visible during recording) -->
    <TextView
        android:id="@+id/recordingTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recording: 00:00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/recording_time_text"
        android:background="@color/recording_time_background"
        android:padding="8dp"
        android:gravity="center"
        android:visibility="gone" />

    <!-- Tab Layout for navigation -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- ViewPager for fragments -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Control bar at bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/control_background">

        <Button
            android:id="@+id/btnStartRecording"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/start_recording"
            style="@style/Widget.Material3.Button" />

        <Button
            android:id="@+id/btnStopRecording"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/stop_recording"
            android:enabled="false"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>

</LinearLayout>